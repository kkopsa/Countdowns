<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Date View -->
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:background="@color/cardview_dark_background">

            <TextView
                android:id="@+id/day_of_week"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="2.5" />

            <TextView
                android:id="@+id/day_of_month"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/month_abbrev"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="2.5" />

        </LinearLayout>

        <!-- Name and Countdown View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/task_desc_text_view"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="24sp"
                android:text="Senior project due"/>

            <TextView
                android:id="@+id/countdown_text_view"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="14 days 12 hours 57 minutes 38 seconds" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>