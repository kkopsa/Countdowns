<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kopsa.countdowns.CreateTaskActivity">

    <EditText
        android:id="@+id/task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_desc"
        android:imeOptions="actionDone"
        android:inputType="textShortMessage"
        android:layout_margin="5dp"
        android:layout_weight="25"
        android:textSize="24sp" />

    <Button
        android:layout_marginBottom="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/access_date"
        android:text="Pick Date"
        android:id="@+id/pick_date"
        android:layout_gravity="center_horizontal"
        android:layout_weight="20"
        android:onClick="showDatePickerDialog"
        android:contentDescription="@string/pick_date" />

    <Button
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/access_time"
        android:text="Pick Time"
        android:id="@+id/pick_time"
        android:layout_gravity="center_horizontal"
        android:layout_weight="20"
        android:onClick="showTimePickerDialog"
        android:contentDescription="@string/pick_time" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/cancel_button"
            android:layout_weight="25" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@android:drawable/ic_input_add"
            android:text="Save Task"
            android:id="@+id/add_task"
            android:layout_weight="25"
            android:contentDescription="@string/add_task" />
    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="25" />

</LinearLayout>
