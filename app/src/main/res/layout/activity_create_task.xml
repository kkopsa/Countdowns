<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kopsa.countdowns.CreateTaskActivity">

    <EditText
        android:id="@+id/task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_desc"
        android:imeOptions="actionDone"
        android:inputType="textShortMessage"
        android:textSize="24sp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12.5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/access_date"
            android:id="@+id/pick_date"
            android:textSize="16sp"
            android:onClick="showDatePickerDialog"
            android:contentDescription="@string/pick_date" />

        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/access_time"
            android:id="@+id/pick_time"
            android:textSize="16sp"
            android:onClick="showTimePickerDialog"
            android:contentDescription="@string/pick_time" />

    </LinearLayout>

</LinearLayout>
